{% extends 'base.html.twig' %}
{% block title %}S'enregistrer | Sortir.com{% endblock %}
{% block body %}
    {{ include('utils/header.html.twig') }}
    <div class="container">
        <h3 class="text-center py-3">Mon profil</h3>
        <div class="row justify-content-center">
            <div class="col">
                {{ form_start(editPasswordForm) }}

                <div class="form-group pb-2 text-center">
                    <label for="email" class="col-lg-2">Mot de Passe * :</label>
                    {{ form_widget(editPasswordForm.plainPassword) }}
                </div>

                <div class="form-group pb-2 text-center">
                    <label for="email" class="col-lg-2">Confirmation * :</label>
                    {{ form_widget(editPasswordForm.plainPasswordConfirm) }}
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary p-3">Modifier mon mot de passe</button>
                    {{ form_end(editPasswordForm) }}
                </div>
            </div>
        </div>
    </div>

    {{ include('utils/footer.html.twig') }}
{% endblock %}
