{% extends 'base.html.twig' %}
{% block title %}S'enregistrer | Sortir.com{% endblock %}
{% block body %}
    {{ include('utils/header.html.twig') }}
    <div class="container" style="min-height: 80vh">
        <h3 class="text-center py-3">Créer un compte</h3>
        <div class="row">
            <div class="col">
                {{ form_start(registrationForm) }}
                    <div class="form-group pb-2 text-center">
                        <label for="pseudo" class="col-lg-2">{{ form_label(registrationForm.pseudo) }} * :</label>
                        {{ form_widget(registrationForm.pseudo) }}
                    </div>

                    <div class="form-group pb-2 text-center">
                        <label for="email" class="col-lg-2">{{ form_label(registrationForm.email) }} * :</label>
                        {{ form_widget(registrationForm.email) }}
                    </div>

                    <div class="form-group pb-2 text-center">
                        <label for="prenom" class="col-lg-2">{{ form_label(registrationForm.prenom) }} * :</label>
                        {{ form_widget(registrationForm.prenom) }}
                    </div>

                    <div class="form-group pb-2 text-center">
                        <label for="nom" class="col-lg-2">{{ form_label(registrationForm.nom) }} * :</label>
                        {{ form_widget(registrationForm.nom) }}
                    </div>

                    <div class="form-group pb-2 text-center">
                        <label for="site" class="col-lg-2">Site de rattachement * :</label>
                        {{ form_widget(registrationForm.site) }}
                    </div>
                    <div class="form-group pb-2 text-center">
                        <label for="site" class="col-lg-2">{{ form_label(registrationForm.photo) }} :</label>
                        {{ form_widget(registrationForm.photo) }}
                    </div>
                    <div class="form-group pb-2 text-center">
                        <label for="email" class="col-lg-2">Mot de passe * :</label>
                        {{ form_widget(registrationForm.plainPassword) }}
                    </div>

                    <div class="form-group pb-2 text-center">
                        <label for="email" class="col-lg-2">Confirmation * :</label>
                        {{ form_widget(registrationForm.plainPasswordConfirm) }}
                    </div>

                    <div class="form-group py-3 text-center">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        <label>{{ form_label(registrationForm.agreeTerms) }}</label>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg p-3">Créer mon compte</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

    {{ include('utils/footer.html.twig') }}
{% endblock %}
